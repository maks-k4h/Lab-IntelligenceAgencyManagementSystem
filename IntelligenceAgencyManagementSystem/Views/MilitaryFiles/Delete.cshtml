@model IntelligenceAgencyManagementSystem.MilitaryFile

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Видалення</h1>

<h3>Ви справді бажаєте видалити це?</h3>
<div>
    <h4>Військова інформація</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Worker.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Worker.FirstName)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Worker.SecondName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Worker.SecondName)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MilitaryRank)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MilitaryRank)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullInformation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullInformation)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.WorkerId">Скасувати</a>
    </form>
</div>
