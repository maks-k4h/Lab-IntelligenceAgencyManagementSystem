@model IntelligenceAgencyManagementSystem.TasksToWorkers

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>Додати виконавця</h1>

<h4>Завдання "@ViewBag.TaskTitle"</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddWorker">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="TaskId" value="@ViewBag.TaskId"/>
            
            <div class="form-group">
                <label asp-for="Worker" class="control-label"></label>
                <select asp-for="WorkerId" class ="form-control" asp-items="ViewBag.WorkerId"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@ViewBag.TaskId">До завдання</a>
    |
    <a asp-controller="Workers" asp-action="Index">Співробітники</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
