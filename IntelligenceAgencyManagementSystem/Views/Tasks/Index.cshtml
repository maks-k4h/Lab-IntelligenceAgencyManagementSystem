@model IEnumerable<IntelligenceAgencyManagementSystem.Task>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Операція "@ViewBag.OperationName"</h1>
<h2>Завдання</h2>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.OperationId">Створити</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateStatusSet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.Description)
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateStatusSet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                |
                <a asp-action="Details" asp-route-id="@item.Id">Деталі</a>
                |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div>
    <a asp-controller="TaskStatuses" asp-action="Index">Статуси завдань</a>
</div>
