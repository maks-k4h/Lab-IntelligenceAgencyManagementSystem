@model IntelligenceAgencyManagementSystem.Worker

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.FirstName @Model.SecondName</h1>

<h4>Співробітник</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-type="general">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <hr />
            <h5>Загальна інформація</h5>
            
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondName" class="control-label"></label>
                <input asp-for="SecondName" class="form-control" />
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenderId" class="control-label"></label>
                <select asp-for="GenderId" class="form-control" asp-items="ViewBag.GenderId"></select>
                <span asp-validation-for="GenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeathDate" class="control-label"></label>
                <input asp-for="DeathDate" class="form-control" />
                <span asp-validation-for="DeathDate" class="text-danger"></span>
            </div>
            
            <input asp-for="FamilyStatus" type="hidden" value="@Model.FamilyStatus"/>
            <input asp-for="Education" type="hidden" value="@Model.Education"/>
            <input asp-for="Experience" type="hidden" value="@Model.Experience"/>
            <input asp-for="HealthInformation" type="hidden" value="@Model.HealthInformation"/>
            <input asp-for="LegalInformation" type="hidden" value="@Model.LegalInformation"/>

            <br/>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>@ViewBag.ErrorMessage</strong>
                </div>
            }
            
            <div class="form-group">
                <input type="submit" value="Далі" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">До переліку співробітників</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
