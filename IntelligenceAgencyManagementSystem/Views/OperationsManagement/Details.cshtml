@model IntelligenceAgencyManagementSystem.Operation

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Управління</h1>

<div>
    <h4>Операція</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateStarted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateStarted)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateEnded)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateEnded)
        </dd>
        
        <dt class = "col-sm-2">
            Завдання
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Tasks" asp-action="Index" asp-route-id="@Model.Id">@ViewBag.TasksNum завдань</a>
        </dd>
        
        <dt class = "col-sm-2">
            Учасники
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="WorkersToOperations" asp-action="Index" asp-route-id="@Model.Id">@ViewBag.WorkersNum учасників</a>
        </dd>
        
    </dl>
</div>
<div>
    <a asp-controller="Operations" asp-action="Edit" asp-route-id="@Model?.Id">Редагувати інформацію</a> |
    <a asp-action="Index" asp-route-id="">До переліку</a>
</div>
