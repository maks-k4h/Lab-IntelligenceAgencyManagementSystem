@model IntelligenceAgencyManagementSystem.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Вхід</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mt-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-2">
                <input asp-for="RememberMe" class="form-check-label" />
                <label asp-for="RememberMe" class="control-label"></label>
            </div>
            
            @*<div>
                <span class="text-danger">@ViewBag.ErrorMessage</span>
            </div>*@
            
            <br/>
            <div class="form-group">
                <input type="submit" value="Увійти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

