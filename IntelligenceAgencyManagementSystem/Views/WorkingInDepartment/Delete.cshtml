@model IntelligenceAgencyManagementSystem.WorkingInDepartment

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Видалення</h1>

<h3>Ви справді справді бажаєте видалити це?</h3>
<div>
    <h4>Трудова діяльність</h4>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Worker)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Worker.FullName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role.Title)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateStarted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateStarted)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateEnded)
        </dt>
        <dd class="col-sm-10">
            @if (Model.DateEnded == null)
            {
                <span>До теперішнього часу</span>
            }
            else
            {
                @Html.DisplayFor(model => model.DateEnded)
            }
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">До переліку</a>
    </form>
</div>
